<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>webswing-server-war</artifactId>
    <packaging>war</packaging>
    <parent>
        <artifactId>webswing-server</artifactId>
        <groupId>org.webswing</groupId>
        <version>23.2.1</version>
        <relativePath>..</relativePath>
    </parent>
    <dependencies>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-common</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webswing.tools</groupId>
            <artifactId>webswing-tools-servlet</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-api</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-sessionpool-api</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webswing</groupId>
            <artifactId>formium-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.0.1</version>
        </dependency>
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <version>5.0.0</version>
        </dependency>
        <dependency>
            <groupId>javax.websocket</groupId>
            <artifactId>javax.websocket-api</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>jakarta.websocket</groupId>
            <artifactId>jakarta.websocket-api</artifactId>
            <version>2.0.0</version>
        </dependency>

		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-launcher</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- POM dependencies -->
        <dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-launcher</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.jetty.websocket</groupId>
                    <artifactId>javax-websocket-server-impl</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-server-frontend</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-common</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-app-launcher</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
		<dependency>
            <groupId>org.webswing</groupId>
            <artifactId>webswing-app-services</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <build>
        <finalName>${webswing-war-name}</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <id>prepare-war</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <attachClasses>true</attachClasses>
                    <warSourceDirectory>src/main/webapp</warSourceDirectory>
                    <packagingExcludes>**</packagingExcludes>
                    <archive>
                        <manifest>
                            <mainClass>main.Main</mainClass>
                        </manifest>
                        <manifestEntries>
                            <remoteOriginUrl>${git.remote.origin.url}</remoteOriginUrl>
                            <branch>${git.branch}</branch>
                            <version>${project.version}</version>
                            <commitId>${git.commit.id}</commitId>
                            <describe>${git.commit.id.describe}</describe>
                            <commitTime>${git.commit.time}</commitTime>
                            <buildTime>${git.build.time}</buildTime>
                            <Ignore-Scanning-Packages>com,org,net</Ignore-Scanning-Packages><!--prevent classpath scanning in websphere-->
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
					<execution>
						<id>server-lib</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifact>org.webswing:webswing-server-launcher:${project.parent.version}:jar</artifact>
							<outputDirectory>${project.build.directory}/server</outputDirectory>
						</configuration>
					</execution>
                    <execution>
                        <id>server-common-main</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifact>org.webswing:webswing-common:${project.parent.version}:zip:main</artifact>
                            <outputDirectory>${project.build.directory}/${project.build.finalName}/main</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>swing-lib</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifact>org.webswing:webswing-app-services:${project.parent.version}:zip:swing-lib</artifact>
                            <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/swing-lib</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>swing-boot</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifact>org.webswing:webswing-app-launcher:${project.parent.version}:zip:swing-boot</artifact>
                            <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/swing-boot</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>server-frontend</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifact>org.webswing:webswing-server-frontend:${project.parent.version}:zip:webapp</artifact>
                            <outputDirectory>${project.build.directory}/${project.build.finalName}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-war</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- include all external libraries into single folder -->
                                <move todir="${project.build.directory}/${project.build.finalName}/WEB-INF/lib-ext">
                                    <fileset dir="${project.build.directory}/${project.build.finalName}/WEB-INF/swing-lib" includes="*.jar" />
                                    <fileset dir="${project.build.directory}/${project.build.finalName}/WEB-INF/swing-boot" includes="*.jar" />
                                </move>
	                            
	                            <!-- from lib-ext folder remove all jars that are already in lib folder -->
								<fileset id="lib-list-fileset" dir="${project.build.directory}/${project.build.finalName}/WEB-INF/lib" />
								<pathconvert targetos="unix" pathsep="${line.separator}" property="lib-list-result" refid="lib-list-fileset">
									<map from="${project.build.directory}/${project.build.finalName}/WEB-INF/lib/" to="" />
								</pathconvert>
								<echo file="${project.build.directory}/${project.build.finalName}/WEB-INF/lib/lib.txt">${lib-list-result}</echo>
								<delete>
									<fileset dir="${project.build.directory}/${project.build.finalName}/WEB-INF/lib-ext" includesfile="${project.build.directory}/${project.build.finalName}/WEB-INF/lib/lib.txt" />
								</delete>
								
                                <war destfile="${project.build.directory}/${project.build.finalName}.war" update="true">
                                    <fileset dir="${project.build.directory}/${project.build.finalName}" includes="**" />
                                </war>
                            </target>
                    	</configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
        <!-- =========================================DEVELOPMENT JETTY RUN PROFILE=========================== -->
        <profile>
            <id>dev</id>
            
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>org.webswing.dev.server.InteractiveServerLauncher</mainClass>
                            <commandlineArgs>-example default-all-apps -j jetty.properties -ctx /webswing-server -h 0.0.0.0 </commandlineArgs>
                            <!-- use "interactive -example benchmark ... " to select a different default example after startup -->
                            <addOutputToClasspath>false</addOutputToClasspath>
                            <additionalClasspathElements>
                                <additionalClasspathElement>${project.build.directory}/${project.build.finalName}</additionalClasspathElement>
                                <additionalClasspathElement>${project.build.directory}/test-classes</additionalClasspathElement>
                                <additionalClasspathElement>${project.build.directory}/server/webswing-server-launcher-${project.parent.version}.jar</additionalClasspathElement>
                            </additionalClasspathElements>
                            <includeProjectDependencies>false</includeProjectDependencies>
                            <systemProperties>
                                <systemProperty>
                                    <key>webswing.rootDir</key>
                                    <value>${project.basedir}/../../../webswing-examples/webswing-examples-assembly/dist/webswing-examples-distribution/webswing-examples</value>
                                </systemProperty>
                                <systemProperty>
                                    <key>webswing.auxWarBasePath</key>
                                    <value>${project.basedir}/../../../webswing-examples/webswing-examples-assembly/dist/webswing-examples-distribution/webswing-examples/webapp_aux</value>
                                </systemProperty>
                                <systemProperty>
                                    <key>vaadin.webswingAppUrl</key>
                                    <value>http://localhost:8080/webswing-server/migration-examples</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
